<div id="<%= dom_id coin_type %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= coin_type.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Denomination:</strong>
    <%= coin_type.denomination %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Style:</strong>
    <%= coin_type.style %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Composition:</strong>
    <%= coin_type.composition %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">First issued:</strong>
    <%= coin_type.first_issued %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last issued:</strong>
    <%= coin_type.last_issued %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this coin type", coin_type, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this coin type', edit_coin_type_path(coin_type), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
